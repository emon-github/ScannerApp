
@{
    ViewBag.Title = "Photo";
}

<style>
    .avatar-pic {
        width: 150px;
    }
</style>


<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <h2> Photo</h2>
        <br />
        <div>
            <input type="file" multiple class="custom-file-input form-control" name="file" id="file" accept="image/*" capture="camera">
            <label class="custom-file-label" for="file"> Selfy / Choose Photo</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" name="upload" value="upload" id="upload" class="btn btn-block btn-dark"><i class="fa fa-fw fa-upload"></i> Upload</button>
    </div>
</form>


